<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity"
    android:background="@drawable/background">



    <LinearLayout
        android:id="@+id/usersav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#30ffffff">

        <TextView
            android:paddingStart="10dp"
            android:id="@+id/usersavtext"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"/>


        <TextView
            android:id="@+id/topictv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="Topic"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_marginRight="40dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="123"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp">
        </TextView>

        <TextView
            android:id="@+id/coinicon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="0"
            android:background="@drawable/baseline_point_of_sale_24" />
        <TextView
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/usericon"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:drawableEndCompat="@drawable/baseline_person_24"
            android:layout_weight="0"/>
    </LinearLayout>

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usersav"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="Angol szó"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"></TextView>

    <LinearLayout
        android:id="@+id/elsoketgomblinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question">

       <com.google.android.material.button.MaterialButton
           android:id="@+id/option1"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="0.5"
           android:text="Első szó"
           android:textStyle="bold"
           android:padding="16dp"
           android:layout_margin="20dp">

       </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/option2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="Második szó"
            android:textStyle="bold"
            android:padding="16dp"
            android:layout_margin="20dp">

        </com.google.android.material.button.MaterialButton>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/masodikketgomblinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/elsoketgomblinear">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/option3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Harmadik szó"
            android:textStyle="bold"
            android:layout_weight="0.5"
            android:padding="16dp"
            android:layout_margin="20dp">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/option4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Korrekt szó"
            android:textStyle="bold"
            android:layout_weight="0.5"
            android:padding="16dp"
            android:layout_margin="20dp">

        </com.google.android.material.button.MaterialButton>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/masodikketgomblinear"
        android:layout_centerHorizontal="true"
        android:text="Küldés!">
    </androidx.appcompat.widget.AppCompatButton>

    <LinearLayout
        android:id="@+id/resultsav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#30ffffff"
        android:layout_alignParentBottom="true">

        <TextView
            android:paddingStart="10dp"
            android:id="@+id/progresstextview"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="20dp"
            android:text="1/20"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_weight="0.8"/>

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="3:30"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/clock"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:background="@drawable/baseline_timer_24" />

    </LinearLayout>
</RelativeLayout>